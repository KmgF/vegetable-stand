<%= render  'devise/shared/header'%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= render "devise/shared/links" %>

    <div class="top-text">
    <h3>会員登録</h3>
    <h3>(商品を売りたい方、購入したい方は必須です)</h3>
  </div>

 <div class="form-category">
  <p>アカウント情報</p>
  <div class="form-wrap">
    <div class="form-text-wrap">
      <span class="form-text-mark">必須</span>
     <label class="form-text">ニックネーム(他ユーザーへ表示して良い名前を入力してください)</label>
    </div>
    <div class="field">
     <%= f.text_field :nickname ,id: 'text-input',placeholder:'例）たろう'%>
    </div>
  </div>


  <div class="form-wrap">
    <div class="form-text-wrap">
         <span class="form-text-mark">必須</span>
     <label class="form-text">メールアドレス(PC・携帯どちらでも可)</label>
    </div>
   <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: 'field-email',placeholder: 'メールアドレスを入力してください'%>
   </div>
   </div>

  <div class="form-wrap">
    <div class="form-text-wrap">
     <span class="form-text-mark">必須</span>
     <label class="form-text">パスワード(半角)</label>
    </div>
  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password" ,placeholder:'半角英数字、6文字以上'%>
  </div>
</div>

  <div class="form-wrap">
    <div class="form-text-wrap">
      <span class="form-text-mark">必須</span>
     <label class="form-text">パスワード(確認用) もう１度入力してください</label>
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: '同じパスワードを入力してください'%>
    </div>
  </div>
</div>

<div class="form-category">
<p>本人情報</p>
   
 <div class="form-wrap">
    <div class="form-text-wrap">
     <span class="form-text-mark">必須</span>
     <label class="form-text">本名</label>
    </div>
   <div class="field">
     <%= f.text_field :first_name, placeholder: '例) 山田'%>
     <%= f.text_field :family_name, placeholder:'例) 太郎' %>
 </div>
   </div> 

  <div class="form-wrap">
    <div class="form-text-wrap">
    <span class="form-text-mark">必須</span>
     <label class="form-text">本名(ふりがな)</label>
    </div>
    <div class="field">
      <%= f.text_field :first_name_kana, placeholder: '例) ヤマダ' %>
      <%= f.text_field :family_name_kana, placeholder: '例) タロウ'%>
    </div>
   </div>

   <div class="form-wrap">
  <div class="form-text-wrap">
       <span class="form-text-mark">必須</span>
         <label class="form-text">現住所の郵便番号</label>
  </div>
   <div class="field">
    <%= f.text_field :postal_number, placeholder:'例) 123-4567'%>
   </div>
  </div>
  </div>

  <div class="registration-actions">
    <%= f.submit "登録する" ,class:'registration-action-btn'%>
  </div>
  
<% end %>


</div>
